<view class="root" bind:__l="__l"><view class="center"><view class="logo-backgroud"><view class="logo"><view class="img"><image class="logo-img" src="{{targetUserInfo.headImageUrl}}"></image></view><view class="logo-title"><view class="user-name">{{targetUserInfo.name}}</view><view data-event-opts="{{[['tap',[['goPoints',['$event']]]]]}}" class="certify" bindtap="__e"><block wx:if="{{targetUserInfo.isCertified}}"><view class="certify-text">已认证</view></block><block wx:else><view class="certify-text">未认证</view></block></view></view></view></view><view class="body"><view class="basic-data _div"><view class="basic-data-item _div"><text>关注</text><text>{{targetUserInfo.followNum}}</text></view><view class="basic-data-item _div"><text>粉丝</text><text>{{targetUserInfo.followerNum}}</text></view><view class="basic-data-item _div"><text>帖子</text><text>{{targetUserInfo.postNum}}</text></view><view class="basic-data-item-last _div"><text>评论</text><text>{{targetUserInfo.commentNum}}</text></view></view></view><view class="center-list"><view class="center-list-item border-bottom"><text class="list-text">专业</text><text class="navigat-arrow">{{targetUserInfo.major}}</text></view><view class="center-list-item border-bottom"><text class="list-text">学院</text><text class="navigat-arrow">{{targetUserInfo.college}}</text></view></view><view class="bottom-nav"><text class="bottom-nav-item" type="primary" data-event-opts="{{[['tap',[['follow',['$event']]]]]}}" bindtap="__e">{{targetUserInfo.hasFollow?"取消关注":"关注"}}</text><text class="bottom-nav-item" type="primary" data-event-opts="{{[['tap',[['goChat',['$event']]]]]}}" bindtap="__e">发消息</text></view></view><view class="points"><block wx:if="{{targetUserInfo.points}}"><text class="point-text">{{"$"+pointText+"积分"}}</text></block><block wx:else><text class="point-text">$0积分</text></block></view></view>