<view class="content" bind:__l="__l"><view class="add-post-box"><view class="title-word-count">{{post.titleWordCount+"/15"}}</view><input class="post-title" type="text" placeholder="输入标题" placeholder-class="title-placeholder" maxlength="15" focus="true" confirm-type="done" data-event-opts="{{[['input',[['bindTitleInput',['$event']]]]]}}" value="{{post.postTitle}}" bindinput="__e"/><view class="devide-line"></view><textarea class="post-content" placeholder="添加内容(至少10个字)" maxlength="3000" placeholder-class="content-placeholder" data-event-opts="{{[['input',[['bindContentInput',['$event']]]]]}}" value="{{post.postContent}}" bindinput="__e"></textarea></view><view class="content-word-count">{{post.contentWordCount+"/3000"}}</view><scroll-view scroll-x><view class="tags-box"><view class="tag">添加标签</view><block wx:for="{{post.tags}}" wx:for-item="tag" wx:for-index="index" wx:key="index"><view class="tag" id="{{'tag'+index}}">{{''+tag+''}}</view></block></view></scroll-view><view class="add-post-bottom"><view class="row-left"><view class="set-points">设置分数</view><view class="set-sort">设置分类</view></view><view class="row-right"><image class="normal-icon" src="../../../static/icons/emoji.png" mode></image><image class="normal-icon" src="../../../static/icons/pic.png" mode></image><view data-event-opts="{{[['tap',[['commitPost',['$event']]]]]}}" class="send" bindtap="__e">发送</view></view></view></view>