<view class="content" bind:__l="__l"><view class="add-post-box"><view class="title-word-count">{{post.titleWordCount+"/15"}}</view><input class="post-title" type="text" placeholder="输入标题" placeholder-class="title-placeholder" maxlength="15" focus="true" confirm-type="done" data-event-opts="{{[['input',[['bindTitleInput',['$event']]]]]}}" value="{{post.postTitle}}" bindinput="__e"/><view class="devide-line"></view><textarea class="post-content" placeholder="添加内容(至少10个字)" maxlength="400" placeholder-class="content-placeholder" data-event-opts="{{[['input',[['bindContentInput',['$event']]]]]}}" value="{{post.postContent}}" bindinput="__e"></textarea></view><view class="content-word-count">{{post.contentWordCount+"/400"}}</view><view class="tags-box"><view data-event-opts="{{[['tap',[['showTagInputBox',['$event']]]]]}}" class="tag" bindtap="__e">添加标签</view><block wx:for="{{post.tags}}" wx:for-item="tag" wx:for-index="index" wx:key="index"><view class="tag" id="{{'tag'+index}}">{{''+tag+''}}</view></block></view><view hidden="{{!(showTagInput)}}" class="tag-input-box"><input class="tag-input-box-input" type="text" placeholder="七个字以内" maxlength="7" data-event-opts="{{[['input',[['__set_model',['$0','tagInputContent','$event',[]],['']]]]]}}" value="{{tagInputContent}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['addTag',['$event']]]]]}}" class="tag-input-box-add-btn" bindtap="__e">添加</view><image class="tag-input-box-icon-cancel" src="/static/icons/delete-gray.png" data-event-opts="{{[['tap',[['hideTagInputBox',['$event']]]]]}}" bindtap="__e"></image></view><view class="add-post-bottom"><view class="row-left"><picker class="set-points" range="{{pointsRange}}" value="{{pointsSelected}}" data-event-opts="{{[['change',[['selectPoints',['$event']]]]]}}" bindchange="__e">设置分数</picker><view hidden="{{!(post.points!=-1)}}" class="post-points">{{post.points}}</view><picker class="set-sort" range="{{postTypeRange}}" value="{{postTypeSelected}}" data-event-opts="{{[['change',[['selectpostType',['$event']]]]]}}" bindchange="__e">设置分类</picker><view hidden="{{!(post.postType!=-1)}}" class="post-sorted">{{postTypeComputed}}</view></view><view class="row-right"><image class="normal-icon" src="/static/icons/emoji.png" mode></image><image class="normal-icon" src="/static/icons/pic.png" mode></image><view data-event-opts="{{[['tap',[['sendPost',['$event']]]]]}}" class="send" bindtap="__e">发送</view></view></view></view>