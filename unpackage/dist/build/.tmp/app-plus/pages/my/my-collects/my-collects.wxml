<view class="content" bind:__l="__l"><block wx:for="{{posts}}" wx:for-item="postItem" wx:for-index="index" wx:key="id"><view id="{{postItem.id}}" data-index="{{index}}"><view class="post-item"><view class="post-item-top"><view class="post-title">{{postItem.title}}</view><view class="post-publish-time">{{postItem.publishTime}}</view></view><view class="post-item-center">{{''+postItem.content+''}}</view><view class="post-item-bottom"><view class="user-box"><image class="user-head-img" src="{{postItem.userHeadImg}}"></image><view class="user-name">{{postItem.userName}}</view></view><view class="post-points">{{'$'+postItem.points+''}}</view><view class="normal-icon-box"><image class="normal-icon-box-icon" src="/static/icons/watch.png"></image><view class="normal-icon-box-text">{{postItem.watchNum}}</view></view><view class="normal-icon-box"><image class="normal-icon-box-icon" src="/static/icons/comment.png"></image><view class="normal-icon-box-text">{{postItem.commentNum}}</view></view></view></view><view class="devide-line"></view></view></block></view>